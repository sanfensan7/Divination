<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础应用主题 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/divination_background</item>
        <item name="android:textColorPrimary">@color/divination_text</item>
    </style>

    <!-- 自定义日历样式，禁用年份修改功能 -->
    <style name="CustomCalendarView" parent="android:Widget.CalendarView">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:showWeekNumber">false</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:background">@color/divination_card_background</item>
    </style>
    
    <!-- 自定义日期选择器样式，禁用年份修改功能 -->
    <style name="CustomDatePicker" parent="android:Widget.DatePicker">
        <item name="android:datePickerMode">calendar</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:spinnersShown">false</item>
        <item name="android:background">@color/divination_card_background</item>
    </style>
    
    <!-- 现代卡片样式 -->
    <style name="ModernCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="cardBackgroundColor">@color/divination_card_background</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <!-- 标题文本样式 -->
    <style name="TitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/divination_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <!-- 按钮样式 -->
    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources> 