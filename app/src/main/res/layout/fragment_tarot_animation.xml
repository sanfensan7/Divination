<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divination_background"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ModernCard"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="问题：你的未来如何？"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/divination_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSpreadName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="牌阵：三张牌阵"
                android:textSize="14sp"
                android:textColor="@color/neutral_gray"
                app:layout_constraintTop_toBottomOf="@id/tvQuestion" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="请在心中默念问题，然后点击任意一张牌..."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/divination_text"
        app:layout_constraintTop_toBottomOf="@id/cardHeader" />

    <FrameLayout
        android:id="@+id/cardsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/cardDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInstructions" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ModernCard"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/scrollView">

        <TextView
            android:id="@+id/tvCardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="@color/divination_text" />
    </com.google.android.material.card.MaterialCardView>
        
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ModernCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_min="80dp"
        app:layout_constraintHeight_max="120dp">
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/tvCardsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/divination_text"
                android:visibility="gone" />
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- 加载状态卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLoading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/ModernCard"
        app:cardElevation="12dp"
        app:cardCornerRadius="20dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:gravity="center"
            android:background="@drawable/gradient_background"
            android:alpha="0.98">
            
            <!-- 外圈装饰 -->
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/circle_background_outer"
                android:alpha="0.25">
                
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/white"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tvLoadingHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="🔮 塔罗牌正在为您占卜..."
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="✨ 感应宇宙能量，揭示命运真相 ✨"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:alpha="0.95"
                android:textAlignment="center"/>
                
            <!-- 脉动动画指示器 -->
            <LinearLayout
                android:id="@+id/loadingDotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center">
                
                <View
                    android:id="@+id/loadingDot1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle_background_outer"
                    android:backgroundTint="@color/gold"/>
                
                <View
                    android:id="@+id/loadingDot2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle_background_outer"
                    android:backgroundTint="@color/gold_light"/>
                
                <View
                    android:id="@+id/loadingDot3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle_background_outer"
                    android:backgroundTint="@color/gold"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout> 