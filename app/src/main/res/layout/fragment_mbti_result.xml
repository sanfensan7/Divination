<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 人格类型标题卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MBTI.SectionCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_purple_gold"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPersonalityType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INTJ"
                    android:textSize="48sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvPersonalityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建筑师"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvPersonalityRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分析师型"
                    android:textSize="14sp"
                    android:textColor="#FFD700"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvTestDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试日期：2024-12-20"
                    android:textSize="12sp"
                    android:textColor="#E0E0E0"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 维度得分卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MBTI.SectionCard"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 维度分析"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"/>

                <!-- E/I 维度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvEILabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="67% 外向 (E)"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="4dp"/>

                    <ProgressBar
                        android:id="@+id/pbEI"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max="100"
                        android:progress="67"
                        android:progressTint="#9C27B0"
                        android:progressBackgroundTint="#E1BEE7"/>
                </LinearLayout>

                <!-- S/N 维度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvSNLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72% 直觉 (N)"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="4dp"/>

                    <ProgressBar
                        android:id="@+id/pbSN"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max="100"
                        android:progress="72"
                        android:progressTint="#2196F3"
                        android:progressBackgroundTint="#BBDEFB"/>
                </LinearLayout>

                <!-- T/F 维度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvTFLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58% 思考 (T)"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="4dp"/>

                    <ProgressBar
                        android:id="@+id/pbTF"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max="100"
                        android:progress="58"
                        android:progressTint="#4CAF50"
                        android:progressBackgroundTint="#C8E6C9"/>
                </LinearLayout>

                <!-- J/P 维度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJPLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="64% 判断 (J)"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="4dp"/>

                    <ProgressBar
                        android:id="@+id/pbJP"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max="100"
                        android:progress="64"
                        android:progressTint="#FF9800"
                        android:progressBackgroundTint="#FFE0B2"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 性格描述卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MBTI.SectionCard"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✨ 性格概述"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="富有想象力和战略性的思想家，一切皆在计划之中。"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:lineHeight="22dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 优势卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MBTI.SectionCard"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💪 性格优势"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvStrengths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:lineHeight="22dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 劣势卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MBTI.SectionCard"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️ 需要注意"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvWeaknesses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:lineHeight="22dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 职业建议卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MBTI.SectionCard"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💼 适合职业"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvCareers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:lineHeight="22dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 人际关系卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="❤️ 人际关系"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvRelationships"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:lineHeight="22dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 成长建议卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌱 成长建议"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvGrowth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:lineHeight="22dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetake"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="重新测试"
                style="@style/MBTI.PrimaryButton"
                app:icon="@android:drawable/ic_menu_rotate"
                app:iconGravity="start"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinish"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="完成"
                style="@style/MBTI.SecondaryButton"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="start"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

