<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 进度条区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MBTI.SectionCard"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第 1 / 60 题"
                    android:textSize="14sp"
                    android:textColor="#7B1FA2"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_horizontal"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#9C27B0"
                    android:progressBackgroundTint="#E1BEE7"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 题目卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MBTI.SectionCard"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvQuestionNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="题目 1"
                    android:textSize="12sp"
                    android:textColor="#9C27B0"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="在社交聚会中，你通常感到精力充沛。"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:lineHeight="28dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 选项按钮组 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- 强烈同意 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStronglyAgree"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="强烈同意"
                style="@style/MBTI.OptionButton.StrongAgree"/>

            <!-- 同意 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgree"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="同意"
                style="@style/MBTI.OptionButton.Agree"/>

            <!-- 略同意 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSlightlyAgree"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="略同意"
                style="@style/MBTI.OptionButton.SlightlyAgree"/>

            <!-- 中立 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNeutral"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="中立"
                style="@style/MBTI.OptionButton.Neutral"/>

            <!-- 略不同意 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSlightlyDisagree"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="略不同意"
                style="@style/MBTI.OptionButton.SlightlyDisagree"/>

            <!-- 不同意 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDisagree"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="不同意"
                style="@style/MBTI.OptionButton.Disagree"/>

            <!-- 强烈不同意 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStronglyDisagree"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="强烈不同意"
                style="@style/MBTI.OptionButton.StrongDisagree"/>
        </LinearLayout>

        <!-- 导航按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevious"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="上一题"
                style="@style/MBTI.PrimaryButton"
                app:icon="@android:drawable/ic_media_previous"
                app:iconGravity="start"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="下一题"
                style="@style/MBTI.PrimaryButton"
                app:icon="@android:drawable/ic_media_next"
                app:iconGravity="end"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

